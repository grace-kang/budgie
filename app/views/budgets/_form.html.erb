<div class="form">
  <%= form_with model: budget do |form| %>
    <div class="form-input">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="form-input">
      <%= form.label :total %>
      <%= form.number_field :total %>
    </div>

    <div class="form-submit">
      <%= form.submit %>
    </div>

    <% if budget.errors.any? %>
      <div class="form-errors">
        <% budget.errors.full_messages.each do |message| %>
          <span><%= message %></span>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
