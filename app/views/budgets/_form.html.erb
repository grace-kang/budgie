<%= form_with model: [month, budget] do |form| %>
  <div class="form">
    <div class="budget-name-input">
      <%= form.text_field :name, placeholder: 'Name', autofocus: true %>
    </div>
    <div class="budget-total-input">
      <%= form.number_field :total, placeholder: 'Limit' %>
    </div>

    <%= form.hidden_field :month_id, value: month.id %>

    <div class="hidden-submit">
      <%= form.submit 'Create' %>
    </div>

    <% if budget.errors.any? %>
      <div class="form-errors">
        <% budget.errors.full_messages.each do |message| %>
          <span><%= message %></span>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
